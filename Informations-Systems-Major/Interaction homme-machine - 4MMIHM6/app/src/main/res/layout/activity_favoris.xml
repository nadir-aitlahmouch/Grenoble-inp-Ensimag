<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    tools:context=".ListeActivite">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="424dp"
        android:layout_height="135dp"
        android:layout_marginBottom="596dp"
        android:background="@drawable/head_3"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="Favoris"
        android:textAllCaps="true"
        android:textColor="@color/AliceBlue"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/retour"
        android:layout_width="51dp"
        android:layout_height="49dp"
        android:layout_marginTop="135dp"
        android:layout_marginEnd="360dp"
        android:layout_marginRight="360dp"
        android:layout_marginBottom="547dp"
        android:background="@color/White"
        android:src="@drawable/retour"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ListView
        android:id="@+id/liste"
        android:layout_width="417dp"
        android:layout_height="440dp"
        android:layout_marginTop="184dp"
        android:layout_marginBottom="107dp"
        android:background="@drawable/bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="422dp"
        android:layout_height="107dp"
        android:layout_marginTop="624dp"
        android:background="@color/Turquoise"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        tools:ignore="MissingConstraints"


        />

    <ImageButton
        android:id="@+id/home"
        android:layout_width="68dp"
        android:layout_height="58dp"
        android:layout_marginStart="86dp"
        android:layout_marginLeft="86dp"
        android:layout_marginTop="644dp"
        android:layout_marginEnd="257dp"
        android:layout_marginRight="257dp"
        android:layout_marginBottom="29dp"
        android:background="@color/Turquoise"
        android:src="@drawable/home"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/parametres"
        android:layout_width="68dp"
        android:layout_height="58dp"
        android:layout_marginStart="256dp"
        android:layout_marginLeft="256dp"
        android:layout_marginTop="644dp"
        android:layout_marginEnd="87dp"
        android:layout_marginRight="87dp"
        android:layout_marginBottom="29dp"
        android:background="@color/Turquoise"
        android:src="@drawable/parametres"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/profil"
        android:layout_width="68dp"
        android:layout_height="58dp"
        android:layout_marginStart="171dp"
        android:layout_marginLeft="171dp"
        android:layout_marginTop="644dp"
        android:layout_marginEnd="172dp"
        android:layout_marginRight="172dp"
        android:layout_marginBottom="29dp"
        android:background="@color/Turquoise"
        android:src="@drawable/profil"
        tools:ignore="MissingConstraints" />


</FrameLayout>